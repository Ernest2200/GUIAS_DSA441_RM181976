<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="udb.edu.sv.recyclerviewdinamico.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">


        <ImageView
            android:id="@+id/teamImage"
            android:layout_width="393dp"
            android:layout_height="257dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/animerating"
            android:layout_width="413dp"
            android:layout_height="47dp"
            android:layout_marginStart="24dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teamImage" />

        <TextView
            android:id="@+id/animeDescription"
            android:layout_width="415dp"
            android:layout_height="164dp"
            android:layout_marginTop="28dp"
            android:textSize="20dp"
           android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animerating" />

        <TextView
            android:id="@+id/animeEpisode"
            android:layout_width="411dp"
            android:layout_height="171dp"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animeDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
